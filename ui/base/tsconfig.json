{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"emitDeclarationOnly": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["src/**/*.stories.ts"]
}
