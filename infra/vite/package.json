{
	"name": "@poc/infra-vite",
	"version": "0.0.1",
	"description": "shared vite configuration and utilities",
	"type": "module",
	"scripts": {
		"clean": "pnpm run clean:deps && pnpm run clean:cache && pnpm run clean:dist",
		"clean:cache": "git clean -xdf .turbo .cache node_modules/.cache",
		"clean:deps": "git clean -xdf node_modules",
		"clean:dist": "git clean -xdf dist",
		"tsc": "tsc"
	},
	"devDependencies": {
		"@poc/typescript": "workspace:*",
		"@types/node": "catalog:node",
		"typescript": "catalog:"
	},
	"peerDependencies": {
		"vite": "catalog:vite",
		"yaml": "catalog:vite"
	}
}
